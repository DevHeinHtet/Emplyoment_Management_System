@model IEnumerable<EmployeeManagement.Data.Entities.Position>

@{
    ViewData["Title"] = "Position List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Position List</h1>
        <a class="btn btn-primary" asp-controller="Position" asp-action="Create" >Add Position</a>
    </div>

    <table class="table table-striped table-responsive mt-3">
        <thead class="thead-dark">
            <tr>
                <th>No.</th>
                <th>Department Name</th>
                <th>Position Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = 1;
            }
            @foreach (var position in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@position.Department.Name</td>
                    <td>@position.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", "Position", new { id = position.PositionID })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Position", new { id = position.PositionID })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this position?');">Delete</a>
                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
</div>
